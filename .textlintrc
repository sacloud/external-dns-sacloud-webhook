{
  "rules": {
    "common-misspellings": true,
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false,
      "4.2.7.コロン(：)": false,
      "4.3.1.丸かっこ（）": false
    },
    "preset-ja-technical-writing": {
      "ja-no-mixed-period": false,
      "max-comma": {
        "max": 4
      },
      "max-kanji-continuous-len": {
        "max": 7
      },
      "no-exclamation-question-mark": false,
      "no-unmatched-pair": false,
      "sentence-length": {
        "max": 150
      }
    }
  }
}
